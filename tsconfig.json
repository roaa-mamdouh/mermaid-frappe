{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["mermaid/public/js/*"]
    }
  },
  "include": [
    "mermaid/public/js/**/*.ts",
    "mermaid/public/js/**/*.vue",
    "mermaid/public/frontend/src/**/*.ts",
    "mermaid/public/frontend/src/**/*.vue",
    "node_modules/frappe-ui/**/*.ts",
    "node_modules/frappe-ui/**/*.vue"
  ],
  "exclude": []
}
